<div>
  <%=render 'commons/header' %>
</div>

<div class="main">
  <div class="main-picture-boxes">

    <a href="#"><%=image_tag 'left-arrow.jpg' ,class:"left-arrow"%></a>

    <div class="pictures">
      <% @star.each do |recipe| %>
        <% if recipe.id > 11 %>
          <% break %>
        <%else %>
          <div class="picture-on">
            <div class="picture-main">
              <a href="/recipes/<%=recipe.id%>">
                <%=image_tag RecipeImage.find(recipe.recipe_images.first.id).image.url ,class: 'main-pics-image'%>
              </a>
            </div>
            <div class="picture-name">
              <p class="recipe"><%=recipe.title%></p>
            </div>

          </div> <!-- picture-on 끝 -->
        <% end %>
      <% end %>

    </div><!-- pictures 끝 -->

    <a href="#"><%=image_tag 'right-arrow.jpg' ,class:"right-arrow"%></a>
  </div> <!-- main-picture-boxes 끝 -->

  <div class="bottom-box">

    <div class="bottom-left">

      <div class="bottom-left-top">
        <p>BEST3</p>
      </div><!-- bottom-left-top 끝 -->

      <div class="bottom-left-bottom">
        <% cnt = 1%>
        <% @top3.each do |top| %>

          <div class="best<%=cnt%>">
            <div class="best<%=cnt%>-box">
              <a href="/recipes/<%= top.id %>">
                <%= image_tag RecipeImage.find(top.recipe_images.first.id).image.url, class: 'best'+cnt.to_s+'-box' %>
              </a>
            </div>
            <p><%=cnt%>위</p>
            <p><%=top.title%></p>
          </div>
          <%cnt = cnt+1%>
        <%end%>
      </div> <!-- bottom-left-bottom 끝 -->

    </div> <!-- bottom-left 끝 -->

    <div class="bottom-right">

      <div class="bottom-right-notify">

        <div class="notify">
          <p>공지 사항</p>
          <a class="notify-more" href="/notice">more</a>
        </div>
        <div class="bottom-notify">
          <% @notify.each do |notice|%>
            <% if notice.id > 3 %>
              <% break %>
            <% else %>
              <p class="bottom-notify-title"><a href="/notice/<%=notice.id%>"><%=notice.title%></a></p>
            <% end %>
          <% end %>
        </div>

      </div> <!-- bottom-right-notify 끝 -->

      <div class="bottom-add">
        <%= image_tag 'add.png' , class:"add" %>
      </div>

    </div> <!-- bottom-right 끝 -->

  </div> <!-- bottom-box 끝 -->

</div> <!-- main 끝 -->